    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp"
        app:circularflow_radiusInDP=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Orange_Bg_Light"
            android:layout_marginTop="15dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_Inquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/kay_wave"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".68"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_Inquiry"
                app:layout_constraintWidth_percent=".5" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/HeaderLabelBlack"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Product Inquiry"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/logo"
                app:layout_constraintTop_toTopOf="@+id/logo"
                app:layout_constraintBottom_toBottomOf="@+id/logo"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/DescriptionHeaderStyle"
                android:id="@+id/desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Choose Variant, Mode of Payment, Date of Purchase"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintEnd_toEndOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
